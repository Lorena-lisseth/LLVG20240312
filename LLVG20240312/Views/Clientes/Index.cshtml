@model IEnumerable<LLVG20240312.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Crear nuevo</a>
</p>
<div class="table-responsive">
<table class="table table-bordered table-sm">
    <thead >
            <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorreoElectronico)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorreoElectronico)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.IdCliente">Editar</a> |
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdCliente">Detalles</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdCliente">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
